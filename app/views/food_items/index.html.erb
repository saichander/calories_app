<% if current_user.admin? %>
  <%= render 'new' %>
<% else %>
  <h1>Food Items list along with calories</h1>
<% end %>
<table cellspacing="50" border="1">
  <tr>
    <th>Item</th>
    <th>Quantity</th>
    <th>Metrics</th>
    <th>Calories
  </tr>
  <% @food_items_list.each do |food_item| %>
    <tr>
      <td><%= food_item.item %></td>
      <td><%= food_item.quantity %></td>
      <td><%= food_item.metrics %></td>
      <td><%= food_item.calories %></td>
    </tr>
  <% end %>
</table>
